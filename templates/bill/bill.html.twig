
{% extends 'base.html.twig' %}

{% block title %}Hello BillController!{% endblock %}

{% block stylesheets %}
        <link rel="stylesheet" href="https://bootswatch.com/5/minty/bootstrap.css">
{% endblock %}


{% block body %}
<style>
.br{
	margin-bottom: 100px;
}
</style>

<div class="container bootstrap snippets bootdeys">
<div class="row">
  <div class="col-sm-12">
	  	<div class="panel panel-default invoice" id="invoice">
			<hr>
			<div class="row">

				<div class="col-xs-4 from">
					<p class="lead marginbottom">From : NKT Shop</p>
					<p>Can Tho</p>
					<p>Phone: 0303-678-098</p>
					<p>Email: NKTshop@gmail.com</p>
				</div>

				<div class="col-xs-4 to">
					{% for u in userinfo %}
					<p class="lead marginbottom">To : {{u.name}}</p>
					<p>Customer's phone: {{u.phone}}</p>
					<p>Customer's address: {{u.address}}</p>
					{% endfor %}
			    </div>

			    <div class="col-xs-4 text-right payment-details">
					<p class="lead marginbottom payment-info">Payment details</p>
					{% for d in date%}
					<p>Date: {{d.datecreate|date('d/m/y')}}<p>
					{% endfor %}
					<p>Payment methods: Pay on delivery</p>
			    </div>

			</div>
			<div class="row table-row">
				<table class="table table-striped">
			      <thead>
			        {# <tr> #}
			          {# <th class="text-center" style="width:5%">#</th>
			          <th style="width:50%">Item</th>
			          <th class="text-right" style="width:15%">Quantity</th>
			          <th class="text-right" style="width:15%">Unit Price</th>
			          <th class="text-right" style="width:15%">Total Price</th> #}
					{% for p in productdetail %}
						<tr>
							<th style="width:50%">Product Name: {{p.namep}}</th>
							<th style="width:50%">Quantity: {{p.quantity}}</th>
							<th class="text-right" style="width:15%">Total Price: {{p.pricep}}</th>
							{# <th class="text-right" style="width:15%">Unit Price: ${{p.total}}</th> #}
							{# <th class="text-right" style="width:15%">Total Price: ${{total}}</th> #}
						</tr>
					{% endfor %}
					{% for t in total %}
						<td class="br">Unit Price: ${{t.total}}</td>
					{% endfor %}
			        {# </tr> #}
			      </thead>
			    </table>
			</div>
		</div>
	</div>
</div>
</div>
{% endblock %}
